@model SearchVM<Card>
@{
}

<div class="mt-3">
    <form method="post" asp-route-search="@Model.Search">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search Products..." asp-for="Search">
            <button class="btn btn-dark" type="submit">
                <i class="fa-solid fa-magnifying-glass"></i>
            </button>
        </div>
    </form>
</div>

@if(Model.Items.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Player</th>
                <th scope="col">Type</th>
                <th scope="col">Sport</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Card card in Model.Items)
            {
                <tr>
                    <td>@card.Player</td>
                    <td>@card.Type.Name</td>
                    <td>@card.Sport.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
