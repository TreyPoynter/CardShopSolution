@model ManageVM<Quality>
@{
    ViewBag.Title = Model.Action;
}

<h3>@Model.Action @Model.Item.Type</h3>

<form asp-action="Manage" method="post">
    <div class="mt-3 form-floating">
        <input class="form-control" placeholder="" asp-for="Item.Type"/>
        <label>Quality Type</label>
    </div>
    <span class="text-danger" asp-validation-for="Item.Type"></span>
    <input hidden asp-for="@Model.Item.QualityId" />
    <div class="d-flex mt-2">
        <button class="btn btn-primary">Save Changes</button>
        <a class="btn btn-secondary ms-3" asp-action="Index" asp-controller="Quality" asp-area="Admin">Cancel</a>
    </div>
    
</form>


