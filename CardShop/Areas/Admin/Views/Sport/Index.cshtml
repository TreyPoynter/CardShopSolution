@model SearchVM<Sport>
@{
    ViewBag.Title = "Manage Sports";
}

<a class="fs-4" asp-action="Add" asp-controller="Sport" asp-area="Admin">Add Sport</a>

<div class="mt-3">
    <form method="get" asp-action="Index" asp-controller="Sport">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search Sports..." name="searchString" asp-for="Search">
            <button class="btn btn-dark" type="submit">
                <i class="fa-solid fa-magnifying-glass"></i>
            </button>
        </div>
    </form>
</div>

@if (Model.Search != String.Empty)
{
    <div>
        <p>@Model.Items.Count() results for @Model.Search</p>
    </div>
}
@if (Model.Items.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Sport sport in Model.Items)
            {
                <tr>
                    <td class="">@sport.Name</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Sport" asp-area="Admin" asp-route-id="@sport.SportId" class="btn btn-primary">Manage</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
