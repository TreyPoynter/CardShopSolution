@model ManageVM<Sport>
@{
    ViewBag.Title = Model.Action;
}

<h3>@Model.Action @Model.Item.Name</h3>

<form asp-action="Manage" method="post">
    <div class="mt-3 form-floating">
        <input class="form-control" placeholder="" asp-for="Item.Name"/>
        <label>Sport Name</label>
    </div>
    <input hidden asp-for="@Model.Item.SportId" />
    <div class="d-flex mt-2">
        <button class="btn btn-primary">Save Changes</button>
        <a class="btn btn-secondary ms-3" asp-action="Index" asp-controller="Sport" asp-area="Admin">Cancel</a>
    </div>
</form>


