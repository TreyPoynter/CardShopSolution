@model UserManagerVM
@{
}

<div class="mt-3">
    <form method="post" asp-route-search="@Model.Search">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search Users..." asp-for="Search">
            <button class="btn btn-dark" type="submit">
                <i class="fa-solid fa-magnifying-glass"></i>
            </button>
        </div>
    </form>
</div>

@if(Model.Search != String.Empty)
{
    <div>
        <p>@Model.Users.Count() results for @Model.Search</p>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Full Name</th>
            <th scope="col">Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (User user in Model.Users)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
            </tr>
        }
    </tbody>
</table>
