@model LoginVM
@{
    ViewBag.Title = "Login";
}

<div class="container">
    <div class="mt-1 text-danger error-msg" asp-validation-summary="ModelOnly"></div>
    <h2>Login</h2>

    <form asp-controller="Account" asp-action="Login" method="post">
        <div class="form-floating mb-3">
            <input asp-for="Email" class="form-control" placeholder="" />
            <label>Email</label>
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-floating mb-3">
            <input type="password" asp-for="Password" class="form-control" placeholder="" />
            <label>Password</label>
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-check mb-3">
            <input asp-for="IsRemembered" class="form-check-input" type="checkbox" id="rememberme">
            <label asp-for="IsRemembered" class="form-check-label" for="rememberme">
                Remember Me
            </label>
        </div>
        <div class="mb-3">
            <a asp-action="Register">Don't have an Account?</a>
        </div>

        <button type="submit" class="w-100 btn btn-primary">Login</button>
    </form>
</div>


