@inject UserManager<User> UserManager
@{
    ViewBag.Title = "Account Manager";
}

<div class="container mt-2">
    <h2>Account Manager</h2>
    <ul class="list-group mb-2">
        <li class="list-group-item">
            <a class="fs-4 text-decoration-none text-dark" asp-action="ChangePassword" asp-controller="Account">Change Password</a>
        </li>
        <li class="list-group-item">
            <a class="fs-4 text-decoration-none text-dark" asp-action="Purchases" asp-controller="Account">Past Purchases</a>
        </li>
    </ul>
    @if (User.IsInRole("Admin"))
    {
        <h2>Admin</h2>
        <ul class="list-group">
            <li class="list-group-item">
                <a class="fs-4 text-decoration-none text-dark" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin Home</a>
            </li>
            <li class="list-group-item">
                <a class="fs-4 text-decoration-none text-dark" asp-area="Admin" asp-controller="User" asp-action="Index">Manage Users</a>
            </li>
            <li class="list-group-item">
                <a class="fs-4 text-decoration-none text-dark" asp-area="Admin" asp-controller="Product" asp-action="Index">Manage Products</a>
            </li>
            <li class="list-group-item">
                <a class="fs-4 text-decoration-none text-dark" asp-area="Admin" asp-controller="Team" asp-action="Index">Manage Teams</a>
            </li>
            <li class="list-group-item">
                <a class="fs-4 text-decoration-none text-dark" asp-area="Admin" asp-controller="Sports" asp-action="Index">Manage Sports</a>
            </li>
            <li class="list-group-item">
                <a class="fs-4 text-decoration-none text-dark" asp-area="Admin" asp-controller="Qualities" asp-action="Index">Manage Qualities</a>
            </li>
            <li class="list-group-item">
                <a class="fs-4 text-decoration-none text-dark" asp-area="Admin" asp-controller="CardTypes" asp-action="Index">Manage Card Types</a>
            </li>
        </ul>
    }
    
</div>







