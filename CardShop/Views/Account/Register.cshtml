@model RegisterVM
@{
    ViewBag.Title = "Register";
}
<div class="container">
    <h2>Register</h2>

    <form asp-controller="Account" asp-action="Register">
        <div class="form-floating mb-3">
            <input asp-for="FirstName" class="form-control" placeholder="" />
            <label>First Name</label>
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="LastName" class="form-control" placeholder="" />
            <label>Last Name</label>
            <span asp-validation-for="LastName"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Email" class="form-control" placeholder="" />
            <label>Email</label>
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Password" class="form-control" placeholder="" />
            <label>Password</label>
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="ConfirmPassword" class="form-control" placeholder="" />
            <label>Confirm Password</label>
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="mb-3">
            <a asp-action="Login">Already Have an Account?</a>
        </div>

        <button class="w-100 btn btn-primary">Register</button>
    </form>
</div>

