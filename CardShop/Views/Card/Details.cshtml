@model TradingCardDetailsVM
@{
    ViewBag.Title = $"{Model.Card.Player}";
}

<div class="container mt-5">
    <div class="row">
        <div class="row align-items-stretch">
            <div class="col-md-6">
                <div class="d-flex justify-content-center align-items-center h-100">
                    <img src="~/images/@Model.Card.ImageName" width="50%" />
                </div>
            </div>
            <div class="col-md-6 mt-3">
                <div class="d-flex flex-column h-100 w-100">
                    <h3>@Model.Card.Player</h3>
                    <p class="fs-5">@Model.Card.Price.Value.ToString("C")</p>
                    <p class="text-secondary">@Model.Card.Description</p>
                    <div class="mt-auto">
                        <form asp-controller="Bag" asp-action="AddToBag" method="post">
                            <input hidden value="@Model.Card.Id" name="id" />
                            <button class="w-100 text-center btn btn-dark mb-3 d-flex justify-content-center align-items-center" type="submit">
                                Add to Bag <svg class="ms-2" xmlns="http://www.w3.org/2000/svg" width="17" height="17" fill="currentColor" class="bi bi-handbag-fill" viewBox="0 0 16 16">
                                    <path d="M8 1a2 2 0 0 0-2 2v2H5V3a3 3 0 1 1 6 0v2h-1V3a2 2 0 0 0-2-2M5 5H3.36a1.5 1.5 0 0 0-1.483 1.277L.85 13.13A2.5 2.5 0 0 0 3.322 16h9.355a2.5 2.5 0 0 0 2.473-2.87l-1.028-6.853A1.5 1.5 0 0 0 12.64 5H11v1.5a.5.5 0 0 1-1 0V5H6v1.5a.5.5 0 0 1-1 0z" />
                                </svg>
                            </button>
                        </form>
                        <form asp-controller="Payment" asp-action="CheckoutNow">
                            <input hidden value="@Model.Card.Id" name="cardId" />
                            <button class="btn btn-stripe w-100 d-flex justify-content-center" type="submit">
                                Checkout now with <i class="fa-brands fa-stripe"></i>
                            </button>
                        </form>
                        
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
